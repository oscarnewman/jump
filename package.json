{
	"name": "jump-monorepo",
	"version": "0.0.0",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"build": "turbo run build",
		"deploy": "turbo run build --scope=docs --include-dependencies",
		"dev": "turbo run dev --parallel",
		"lint": "turbo run lint",
		"format": "prettier --write \"**/*.{ts,tsx,md}\""
	},
	"devDependencies": {
		"@changesets/cli": "^2.20.0",
		"danger": "^11.0.2",
		"husky": "^7.0.4",
		"lint-staged": "^12.3.3",
		"prettier": "^2.5.1",
		"turbo": "latest"
	},
	"engines": {
		"npm": ">=7.0.0",
		"node": ">=14.0.0"
	},
	"lint-staged": {
		"packages/**/*.{js,jsx,ts,tsx}": [
			"eslint --fix"
		]
	},
	"packageManager": "pnpm@6.24.1"
}
